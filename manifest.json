{
    "name": "SEI Controle de prazos",
    "description": "adiciona funcionalidades para aviso e controle de prazos",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["scripting", "tabs", "notifications", "cookies"],
    "host_permissions": ["https://sei.df.gov.br/*"],
    "content_scripts":[
        {
            "matches": ["*://*.br/sei/*", "*://*.br/sip/*"],
            "js": ["scripts/aviso.js", "scripts/createOptions.js"],
            "css": ["css/table.css", "css/options.css"]
        },
        {
            "matches": ["*://*.br/sei/*", "*://*.br/sip/*"],
            "css":["css/popup.css"],
            "js": ["scripts/createPopup.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {"128": "images/SEI-logo.png"}
}